    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "loader",
            "program": "${workspaceFolder}/builddir/loader",
            "cwd": "${workspaceFolder}/builddir"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "pytest test_dataloader.py",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "-m",
            "args": [
                "pytest",
                "test_dataloader.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/builddir/_lczero_training.cpython-311-x86_64-linux-gnu.so.p"
            }
        }
    ]
}